#! /usr/bin/env bash

set -eu

NAME=${1:-*}

aws ec2 describe-instances \
  --filters Name=tag:Name,Values="$NAME" \
  --output table \
  --query "Reservations[].Instances[0].{ID:InstanceId,Type:Tags[?Key=='Name']|[0].Value,IP:PrivateIpAddress,InstanceType:InstanceType,Launched:LaunchTime,State:State.Name} | sort_by(@, &Type)"
